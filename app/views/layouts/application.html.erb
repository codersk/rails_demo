<!DOCTYPE html>
<html>
  <head>
    <title>RailsApp</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css', media: 'all', 'dapta-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default">
      <a href="#" class="navbar-brand">
        <img src="https://www.etsy.com/assets/dist/images/etsylogo.20140703190113.png">
      </a>
      <ul class="nav navbar-nav">
        <li><%= link_to 'Categories', categories_path %></li>
      </ul>
      <ul class="nav navbar-nav">
        <li><%= link_to 'Products', products_path %></li>
      </ul>
      <ul class="nav navbar-nav">
        <li><%= link_to 'Orders', orders_path %></li>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
          Logged in as <strong>
            <%= current_user.email %>
          </strong>.
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, :class => "btn btn-default" %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, :class => "btn btn-default" %>
          <%= link_to "Sign in", new_user_session_path, :class => "btn btn-default" %>
        <% end %>
        
        <%= link_to '#', :class => 'btn btn-default' do %>
          <span class="glyphicon glyphicon-shopping-cart"></span>
        <% end %>
      </ul>
    </nav>
      
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>
