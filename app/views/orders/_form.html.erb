<%= form_for(@order) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.label :billing_address %><br>
      <%= f.text_area :billing_address, class: "col-md-12" %>
    </div>
    <div class="col-md-6">
      <%= f.label :shipping_address %><br>
      <%= f.text_area :shipping_address, class: "col-md-12" %>
    </div>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary"  %>
  </div>
<% end %>