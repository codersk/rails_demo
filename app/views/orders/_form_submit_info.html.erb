<%= form_for(@order, url: orders_authorize_path(@order), method: :post) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.label :billing_address %><br>
      <%= f.text_area :billing_address, size: '30x5', :class => "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :shipping_address %><br>
      <%= f.text_area :shipping_address, size: '30x5', :class => "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <label> Credit Card Number</label><br>
      <%= text_field :Credit_card, :card_number, :class => "col-md-12" %>
    </div>
    <div class="col-md-4">
      <label> Expiry (mm/yyyy) </label><br>
      <%= text_field :Credit_card, :expiry_date, :class => "col-md-12" %>
    </div>
    <div class="col-md-2">
      <label> CVV</label><br>
      <%= text_field :Credit_card, :cvv, :class => "col-md-12" %>
    </div>
  </div>
  <div class="actions">

  <ul class="pager">
  <%= f.submit "Submit", class: "btn btn-primary" %>
  <%= link_to 'Cancel', orders_cancel_path(@order.id), class: "btn btn-default" %>
  </ul>
<% end %>