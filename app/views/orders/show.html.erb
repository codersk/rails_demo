<div class="container">
  <h1>Shopping Cart</h1>

  <div class='row'>
    <div class='col-md-4'>
      <h4>Product Name</h4>
    </div>
    <div class='col-md-1'>
      <h4>Unit Price</h4>
    </div>
    <div class='col-md-3'>
      <h4>Quantity</h4>
    </div>
    <div class='col-md-4'>
      <div class='row'>
        <div class='col-md-3'>
          <h4>Subtotal</h4>
        </div>
        <div class='col-md-3'>
          <h4>Tax</h4>
        </div>
        <div class='col-md-3'>
          <h4>Total</h4>
        </div>
      </div>
    </div>
  </div>
  <% @line_items.in_groups_of(3).each do |line_items| %>
    <% line_items.select! {|x| !x.nil?} %>
      <% line_items.each do |line_item| %>
      <hr>
      <div class='row'>
        <div class='col-md-4'>
          <%= line_item.product.product_name %>
        </div>
        <div class='col-md-1'>
          <%= line_item.product.price %>
        </div>
        <div class='col-md-3'>
          <%= form_for(line_item, url: line_item, method: :put) do |f| %>
          <div class='row'>
            <div class='col-md-8'>
            <%= f.text_field :qty %>
            </div>
            <div class='col-md-4'>
            <%= f.submit 'Change' %>
            </div>
          </div>
          <% end %>
        </div>
        <div class='col-md-4'>
          <div class='row'>
            <div class='col-md-3'>
              <%= line_item.product.price * line_item.qty %>
            </div>
            <div class='col-md-3'>
              <%= line_item.tax %>
            </div>
            <div class='col-md-3'>
              <%= line_item.total %>
            </div>
            <div class='col-md-3'>
              <%= link_to 'Remove', line_item, method: :delete,class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <hr>
    <div class='row'>
      <div class='col-md-4'>
      </div>
      <div class='col-md-1'>
      </div>
      <div class='col-md-3'>
      </div>
      <div class='col-md-4'>
        <div class='row'>
          <div class='col-md-3'>
            <strong><%= @order.subtotal %></strong>
          </div>
          <div class='col-md-3'>
            <strong><%= @order.tax %></strong>
          </div>
          <div class='col-md-3'>
            <strong><%= @order.total %></strong>
          </div>
          <div class='col-md-3'>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class='rwo'>
    <div class='col-md-12'>
      <h4>Edit Details</h4>
      <%= render 'form_submit_info' %>
    </div>
  </div>
</div>

