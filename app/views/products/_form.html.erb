<%= form_for(@product, :html => { :multipart => true } ) do |f| %>
  <table class="table">
    <tr class="row">
      <th class="col-md-3"><%= f.label :name %></th>
      <td class="col-md-3"><%= f.text_field :name, class: "col-md-12"  %></td>
    </tr>
    <tr class="row">
      <th class="col-md-3"><%= f.label :description %></th>
      <td class="col-md-3"><%= f.text_field :description, class: "col-md-12"  %>  </td>
    </tr>
    <tr class="row">
      <th class="col-md-3"><%= f.label :price %></th>
      <td class="col-md-3"><%= f.text_field :price, class: "col-md-12"  %> </td>
    </tr>
    <tr class="row">
      <th class="col-md-3"><%= f.label :category_id %></th>
      <td class="col-md-3"><%= f.text_field :category_id, class: "col-md-12"  %></tr>
    </tr>
    <tr class="row">
      <th class="col-md-3"><%= f.label :tax_rate %></th>
      <td class="col-md-3"><%= f.text_field :tax_rate, class: "col-md-12"  %></td>
    </tr>
    <tr class="row">
      <th class="col-md-3"><%= f.label :image %></th>
      <td class="col-md-3">
        <%= image_tag @product.image.url(:medium) %>
        <%= f.file_field :image, class: "col-md-12"  %>
      </td>
    </tr>
    <tr class="row">
     <th class="col-md-3"></th>
     <td class="col-md-3"> <%= f.check_box :image_delete %> Delete image?</td>
    </tr>
    <tr class="row">
     <th class="col-md-3"></th>
     <th class="col-md-3"> <%= f.submit "Save", class: "btn btn-block btn-primary pull-right" %></th>
    </tr>
  </table>
<% end %>